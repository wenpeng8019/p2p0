static int mbedtls_rsa_test_fill_context(mbedtls_rsa_context *rsa,
                                         data_t *P_data, data_t *Q_data,
                                         data_t *N_data, data_t *E_data)
{
    mbedtls_mpi N; mbedtls_mpi P; mbedtls_mpi Q;
    mbedtls_mpi E; mbedtls_mpi D;
    int ret;

    mbedtls_mpi_init(&N); mbedtls_mpi_init(&P); mbedtls_mpi_init(&Q);
    mbedtls_mpi_init(&E); mbedtls_mpi_init(&D);

    MBEDTLS_MPI_CHK(mbedtls_mpi_read_binary(&P, P_data->x, P_data->len));
    MBEDTLS_MPI_CHK(mbedtls_mpi_read_binary(&Q, Q_data->x, Q_data->len));
    MBEDTLS_MPI_CHK(mbedtls_mpi_read_binary(&N, N_data->x, N_data->len));
    MBEDTLS_MPI_CHK(mbedtls_mpi_read_binary(&E, E_data->x, E_data->len));

    MBEDTLS_MPI_CHK(mbedtls_rsa_deduce_private_exponent(&P, &Q, &E, &D));

    MBEDTLS_MPI_CHK(mbedtls_rsa_import(rsa, &N, &P, &Q, &D, &E));

#if !defined(MBEDTLS_RSA_NO_CRT)
    MBEDTLS_MPI_CHK(mbedtls_rsa_deduce_crt(&P, &Q, &D, &rsa->DP, &rsa->DQ, &rsa->QP));
#endif /* !MBEDTLS_RSA_NO_CRT */

cleanup:
    mbedtls_mpi_free(&N); mbedtls_mpi_free(&P); mbedtls_mpi_free(&Q);
    mbedtls_mpi_free(&E); mbedtls_mpi_free(&D);
    return ret;
}

#endif /* MBEDTLS_RSA_C && MBEDTLS_BIGNUM_C */
